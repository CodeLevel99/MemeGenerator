<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.derekshao.memegenerator.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ImageView
        android:layout_height="wrap_content"
        android:background="@drawable/gnome_child"
        android:id="@+id/photoImage"
        android:layout_width="wrap_content"
        android:layout_below="@+id/memeButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:text="@string/bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:textSize="22sp"
        android:id="@+id/bottomMemeText"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/bottomTextInput"
        android:text="@string/Bottom_text"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        tools:ignore="TextFields"
        android:layout_below="@+id/topTextInput"
        android:layout_alignStart="@+id/topTextInput" />

    <Button
        android:id="@+id/memeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go"
        android:layout_below="@+id/bottomTextInput"
        android:layout_alignEnd="@+id/topMemeText" />

    <TextView
        android:text="@string/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/topMemeText"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/photoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/topTextInput"
        android:text="@string/topText"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        tools:ignore="TextFields"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
